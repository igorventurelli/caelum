@model IList<BlogWeb.Models.Post>

@foreach (var p in Model) {
    <article>
        <h2>@p.Titulo</h2>
        @if (p.Autor != null) {
            <div class="blog-post-meta">@p.Autor.Nome - @p.DataPublicacao</div>
        }
        else {
            <div class="blog-post-meta">Sem autor - @p.DataPublicacao</div>
        }
        @p.Conteudo
    </article>
}